<?xml version="1.0" encoding="utf-8"?>
<resources>

    <drawable name="myt_main_background">#FFFFFF</drawable>
    <drawable name="myt_more_background">#FFFFFF</drawable>
    <drawable name="myt_video_background">#000000</drawable>
    <color name="myt_default_text_color">#000000</color>
    <string name="myt_category_more">See All</string>
    <string name="myt_error_generic">Could not load videos</string>
    <string name="myt_empty_generic">No videos</string>

    <style name="BaseYtThumbnailIvStyle">
        <item name="android:layout_width">180dp</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="BaseYtDurationTvStyle">
        <item name="android:background">#000000</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="BaseYtTitleTvStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">@color/myt_default_text_color</item>
    </style>

    <style name="BaseYtChannelTvStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/myt_default_text_color</item>
    </style>

    <style name="BaseYtViewsTvStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/myt_default_text_color</item>
    </style>

    <style name="BaseYtCategoryTitleTvStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/myt_default_text_color</item>
    </style>

    <style name="BaseYtCategoryDescriptionTvStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/myt_default_text_color</item>
        <item name="android:text">@string/myt_category_more</item>
    </style>

    <style name="BaseYtSeeAllTvStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/myt_default_text_color</item>
        <item name="android:text">@string/myt_category_more</item>
    </style>


    <style name="BaseYtVideosCardViewStyle">
        <item name="cardElevation">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>

    </style>

    <style name="MytCategoryTitleTvStyle" parent="BaseYtCategoryTitleTvStyle" />

    <style name="MytCategoryDescriptionTvStyle" parent="BaseYtCategoryDescriptionTvStyle" />

    <style name="MytThumbnailIvStyle" parent="BaseYtThumbnailIvStyle" />

    <style name="MytDurationTvStyle" parent="BaseYtDurationTvStyle" />

    <style name="MytTitleTvStyle" parent="BaseYtTitleTvStyle" />

    <style name="MytChannelTvStyle" parent="BaseYtChannelTvStyle" />

    <style name="MytViewsTvStyle" parent="BaseYtViewsTvStyle" />

    <style name="MytSeeAllTvStyle" parent="BaseYtSeeAllTvStyle" />

    <style name="MytVideosCardViewStyle" parent="BaseYtVideosCardViewStyle" />
</resources>